        <corners android:radius="5dp" />

        <padding android:bottom="8dp" android:left="10dp" android:right="10dp" android:top="8dp" />

        <stroke android:width="1dp" android:color="@color/sent_message_pressed_bg" />
    </shape></item>
    <item><shape android:shape="rectangle">
        <solid android:color="@color/sent_message_bg" />

        <corners android:radius="5dp" />

        <padding android:bottom="8dp" android:left="10dp" android:right="10dp" android:top="8dp" />

        <stroke android:width="1dp" android:color="@color/sent_message_bg" />
    </shape></item>

</selector>