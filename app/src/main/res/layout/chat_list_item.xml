<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eeee">

    <ImageView
        android:id="@+id/group_portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:src="@drawable/group_portrait"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:maxLength="10"
        android:layout_toRightOf="@id/group_portrait"
        android:layout_alignTop="@id/group_portrait"/>

    <TextView
        android:id="@+id/chat_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/chat_name"
        android:layout_alignParentRight="true"
        android:layout_below="@id/chat_name"
        android:background="@color/transparent"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:maxLength="60"/>

</RelativeLayout>