<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wetrack.MainActivity">

    <RelativeLayout
        android:id="@+id/main_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/map_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </RelativeLayout>

    <!-- sidebar and groupList will insert here -->

    <RelativeLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/open_sidebar_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:src="@drawable/open_sidebar" />

        <Button
            android:id="@+id/group_list_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:maxLength="10"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/open_sidebar_button"/>

        <ImageButton
            android:id="@+id/drop_list_imagebutton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/transparent"
            android:src="@drawable/list_drop_down"
            android:layout_toRightOf="@id/group_list_button"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/add_contact_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:src="@drawable/add_contact" />
    </RelativeLayout>

    <com.wetrack.AddOptionListView
        android:id="@+id/add_option_listview"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/menu_bar"
        android:layout_centerHorizontal="true"
        android:background="#e0ffffff">

    </com.wetrack.AddOptionListView>
    <Button
        android:id="@+id/chat_button"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/chat_button"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>